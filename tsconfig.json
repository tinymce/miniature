{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "es2015",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "types": [],
    "baseUrl": ".",
    "paths": {
      "tinymce/miniature/*": [ "src/main/ts/*" ]
    }
  },
  "include": [
    "src/demo/ts",
    "src/main/ts",
    "src/test/ts"
  ]
}
